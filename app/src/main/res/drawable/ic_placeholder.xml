<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background Color -->
    <solid android:color="#F5F5DC" /> <!-- Change to your desired color -->

    <!-- Rounded Corners -->
    <corners android:radius="12dp" />

    <!-- Optional Stroke for Border -->
    <stroke
        android:width="1dp"
        android:color="@android:color/darker_gray" />

    <!-- Optional Padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
